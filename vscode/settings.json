{
    "vim.useSystemClipboard": true,
    "vim.handleKeys": {
        "<C-p>": true,
    },
    "vim.leader": "<space>",
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.highlightedyank.enable": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": ["leader", "r"], "commands": ["editor.action.rename"] },
        { "before": ["leader", "f", "x"], "commands": ["editor.action.quickFix"] },
        { "before": ["leader", "w"], "commands": ["workbench.action.files.save"] },
        { "before": ["leader", "x"], "commands": ["workbench.view.explorer"] },
        { "before": ["leader", "h"], "commands": ["workbench.action.previousEditor"] },
        { "before": ["leader", "l"], "commands": ["workbench.action.nextEditor"] },
        { "before": ["leader", "q"], "commands": ["workbench.action.closeActiveEditor"] },
        { "before": ["leader", "p"], "commands": ["workbench.action.quickOpen"] },
        { "before": ["leader", "f"], "commands": ["workbench.view.search"] },
        { "before": ["leader", "e"], "commands": ["workbench.action.showAllEditors"] },
        { "before": ["leader", "1"], "commands": ["workbench.action.openEditorAtIndex1"] },
        { "before": ["leader", "2"], "commands": ["workbench.action.openEditorAtIndex2"] },
        { "before": ["leader", "3"], "commands": ["workbench.action.openEditorAtIndex3"] },
        { "before": ["leader", "4"], "commands": ["workbench.action.openEditorAtIndex4"] },
        { "before": ["leader", "5"], "commands": ["workbench.action.openEditorAtIndex5"] },
        { "before": ["leader", "6"], "commands": ["workbench.action.openEditorAtIndex6"] },
        { "before": ["leader", "7"], "commands": ["workbench.action.openEditorAtIndex7"] },
        { "before": ["leader", "8"], "commands": ["workbench.action.openEditorAtIndex8"] },
        { "before": ["leader", "9"], "commands": ["workbench.action.openEditorAtIndex9"] },
        { "before": ["leader", "s", "b"], "commands": ["workbench.action.toggleSidebarVisibility"] },
        { "before": ["<C-j>"], "commands": ["workbench.action.navigateDown"] },
        { "before": ["<C-k>"], "commands": ["workbench.action.navigateUp"] },
        { "before": ["<C-h>"], "commands": ["workbench.action.navigateLeft"] },
        { "before": ["<C-l>"], "commands": ["workbench.action.navigateRight"] },
        { "before": ["leader", "s", "v"], "commands": [":vsp"] },
        { "before": ["leader", "s", "h"], "commands": [":sp"] },
        { "before": ["leader", "/"], "commands": ["editor.action.commentLine"] },
        { "before": ["leader", "t"], "commands": ["workbench.action.togglePanel"] },
        { "before": ["leader", "g", "s"], "commands": ["workbench.view.scm"] },
        { "before": ["<C-d>"], "after": ["<C-d>", "z", "z"] },
        { "before": ["<C-u>"], "after": ["<C-u>", "z", "z"] }
    ],
    "vim.foldfix": true,
    "editor.minimap.enabled": false,
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "editor.largeFileOptimizations": false,
    "workbench.iconTheme": "vscode-icons",
    "editor.stickyScroll.enabled": false,
    "workbench.editorAssociations": {
        "*.md": "vscode.markdown.preview.editor"
    },
    "editor.fontSize": 16,
    "editor.tabCompletion": "onlySnippets",
    "editor.suggest.insertMode": "replace",
    "workbench.startupEditor": "none",
    "editor.fontFamily": "Hack Nerd Font, Consolas, 'Courier New', monospace",
    "zenMode.hideLineNumbers": false,
    "zenMode.silentNotifications": false,
    "workbench.colorTheme": "Serendipity Midnight",
    "zenMode.hideStatusBar": false,
    "workbench.layoutControl.enabled": false,
    "window.density.editorTabHeight": "compact",
    "window.commandCenter": false,
}
